#write a program to display a prime number in the given range  1 to 10
for num in range(1,10+1):
    if num>1:
        prime=True
        for i in range(2,num):
            if num%i==0:
                prime=False
                break
        if prime:
            print(num)
2nd method:
num=int(input("num"))
for i in range(2,num):
    if num%i==0:
        print("not prime")
        break
    else:
        print("Prime number")
        break

#imp.q)write a program to display list of prime numbers in given range. range is 1 to 100
for i in range(1,100+1):
    if i>1:
        isprime=True
        for num in range(2,i):
            if i%num==0:
                isprime=False
                break
        if isprime:
            print(i,end=" ")

#program to check and return true if the given number is also a prime and the reverse of the given number is also a prime.
def check_prime(num):
    for i in range(2,num):
        if num%i==0:
            print("Num %d is not prime"%(num))
            break
        else:
            print("num %d is prime"%(num))
            break
def reverse(num):
    rev=0
    temp=num
    while temp>0:
        rem=temp%10
        rev=(rev*10)+rem
        temp//=10
    check_prime(rev)
num=int(input("Enter a number:"))
check_prime(num)
reverse(num)


#write a program to check whether the array elements are prime no's or not ,if yes store that index value into another array and display index values.
def prime(n,primecount):
    for i in range(2,n):
        if n<=1:
            return False
        elif(n%i==0):
            primecount=primecount+1   
    if primecount==0:
        return True     
a=[2,15,3,13,7,8]
a2=[]
primecount=0
for i in range(len(a)):
    if (prime(a[i],primecount))==True:
        a2.append(i)
for i in range(len(a2)):
    print(a2[i])
